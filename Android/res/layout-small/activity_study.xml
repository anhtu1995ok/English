<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:strokeAttrs="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_study"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="32dp"
            android:layout_margin="10dp"
            android:background="@drawable/selector_back" />

        <com.android.sjsofteducationapp.extras.StrokeTextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:shadowColor="@color/bg_tranperent_40"
            android:shadowDx="6"
            android:shadowDy="-4"
            android:shadowRadius="3"
            android:textColor="#267a00"
            android:textSize="28sp"
            android:textStyle="bold"
            strokeAttrs:textStrokeColor="#FFFFFF"
            strokeAttrs:textStrokeWidth="1.5" />

        <ImageView
            android:id="@+id/replay"
            android:layout_width="30dp"
            android:layout_height="32dp"
            android:layout_margin="10dp"
            android:background="@drawable/repeat_onclick" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal" >

        <ProgressBar
            android:id="@+id/progress_load_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center" />

        <FrameLayout
            android:id="@+id/frame_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/bg_study_center_1" />

                <ImageView
                    android:id="@+id/image_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="8dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="6dp"
                    android:paddingTop="3dp" />

                <LinearLayout
                    android:id="@+id/layout_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="8dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="6dp"
                    android:paddingTop="3dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" >

                            <com.android.sjsofteducationapp.extras.SquareSvgImageView
                                android:id="@+id/image1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="left"
                                android:layout_marginBottom="3dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/drag"
                                app:svg_raw_resource="@raw/shape_star" />

                            <com.android.sjsofteducationapp.extras.SquareSvgImageView
                                android:id="@+id/image_drag1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="right"
                                android:layout_marginBottom="3dp"
                                android:layout_marginRight="8dp"
                                android:layout_weight="1"
                                android:scaleType="centerCrop"
                                android:src="@drawable/drag"
                                app:svg_raw_resource="@raw/shape_star" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" >

                            <com.android.sjsofteducationapp.extras.SquareSvgImageView
                                android:id="@+id/image2"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="right"
                                android:layout_marginBottom="3dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/drag"
                                app:svg_raw_resource="@raw/shape_star" />

                            <com.android.sjsofteducationapp.extras.SquareSvgImageView
                                android:id="@+id/image_drag2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="left"
                                android:layout_marginBottom="3dp"
                                android:layout_marginLeft="8dp"
                                android:layout_weight="1"
                                android:scaleType="centerCrop"
                                android:src="@drawable/drag"
                                app:svg_raw_resource="@raw/shape_heart" />
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" >

                            <com.android.sjsofteducationapp.extras.SquareSvgImageView
                                android:id="@+id/image3"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="left"
                                android:layout_marginTop="3dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/drag"
                                app:svg_raw_resource="@raw/shape_star" />

                            <com.android.sjsofteducationapp.extras.SquareSvgImageView
                                android:id="@+id/image_drag3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="right"
                                android:layout_marginRight="8dp"
                                android:layout_marginTop="3dp"
                                android:layout_weight="1"
                                android:scaleType="centerCrop"
                                android:src="@drawable/drag"
                                app:svg_raw_resource="@raw/shape_star" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" >

                            <com.android.sjsofteducationapp.extras.SquareSvgImageView
                                android:id="@+id/image4"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="right"
                                android:layout_marginTop="3dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/drag"
                                app:svg_raw_resource="@raw/shape_star" />

                            <com.android.sjsofteducationapp.extras.SquareSvgImageView
                                android:id="@+id/image_drag4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="left"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="3dp"
                                android:layout_weight="1"
                                android:scaleType="centerCrop"
                                android:src="@drawable/drag"
                                app:svg_raw_resource="@raw/shape_heart" />
                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/rightarrow"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/rightarrow_onclick"
                    android:visibility="gone" />
            </LinearLayout>
        </FrameLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_weight="0.7"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/bottom_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>